{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./dist/",
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./server/types"]
  },
  "exclude": [
    "node_modules",
    "public",
    "client"
  ]
}